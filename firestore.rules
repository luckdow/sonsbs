rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===================  GÃœVENLI FIREBASE RULES ===================
    // Google Search Console bot hatalarÄ±nÄ± Ã¶nlemek iÃ§in optimize edildi
    
    // =================== PUBLIC READ ACCESS ===================
    // SEO ve crawler'lar iÃ§in gÃ¼venli public read access
    
    // Genel public read access - bot'lar iÃ§in gÃ¼venli
    match /{document=**} {
      // Sadece GET istekleri iÃ§in public read (bot crawling iÃ§in)
      allow read: if request.method == 'get';
    }
    
    // =================== GERÃ‡EK KOLEKSÄ°YONLAR ===================
    
    // Users collection - kullanÄ±cÄ±lar (admin, driver, customer)
    match /users/{userId} {
      // KullanÄ±cÄ± kendi profilini okuyabilir/gÃ¼ncelleyebilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Adminler tÃ¼m kullanÄ±cÄ±larÄ± gÃ¶rebilir ve yÃ¶netebilir
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // ÅofÃ¶rler kendi bilgilerini gÃ¼ncelleyebilir
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'driver';
      
      // Authenticated kullanÄ±cÄ±lar driver role'lÃ¼ kullanÄ±cÄ±larÄ± okuyabilir
      allow read: if request.auth != null && resource.data.role == 'driver';
    }
    
    // Reservations collection - rezervasyonlar
    match /reservations/{reservationId} {
      // SEO FIX: Public read access for general reservation stats - bot'lar iÃ§in
      allow read: if resource.data.keys().hasAny(['status', 'direction', 'vehicleType', 'createdAt']);
      
      // Herkes rezervasyon oluÅŸturabilir (misafir kullanÄ±cÄ±lar iÃ§in)
      allow create: if true;
      
      // KullanÄ±cÄ± kendi rezervasyonlarÄ±nÄ± gÃ¶rebilir
      allow read: if request.auth != null && 
        (resource.data.customerId == request.auth.uid || 
         resource.data.driverId == request.auth.uid ||
         resource.data.customerInfo.email == request.auth.token.email ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // GEÃ‡Ä°CÄ°: Authenticated kullanÄ±cÄ±lar tÃ¼m rezervasyonlarÄ± okuyabilir (Dashboard iÃ§in)
      allow read: if request.auth != null;
      
      // Admin ve atanmÄ±ÅŸ ÅŸofÃ¶r rezervasyonu gÃ¼ncelleyebilir
      allow update: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         resource.data.driverId == request.auth.uid);
      
      // Sadece admin silebilir
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Vehicles collection - araÃ§lar (herkes gÃ¶rÃ¼r, admin yÃ¶netir)
    match /vehicles/{vehicleId} {
      // SEO FIX: Zaten public âœ…
      allow read: if true; // Public vehicle bilgileri
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Drivers collection - eski ÅŸofÃ¶r sistemi (artÄ±k kullanÄ±lmÄ±yor ama veri var)
    match /drivers/{driverId} {
      // Admin tÃ¼m eski ÅŸofÃ¶rleri gÃ¶rebilir ve yÃ¶netebilir
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // GEÃ‡Ä°CÄ°: Authenticated kullanÄ±cÄ±lar eski ÅŸofÃ¶rleri okuyabilir
      allow read: if request.auth != null;
    }
    
    // Manual Drivers collection - manuel ÅŸofÃ¶rler
    match /manual_drivers/{driverId} {
      // Admin tÃ¼m manuel ÅŸofÃ¶rleri gÃ¶rebilir ve yÃ¶netebilir
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // GEÃ‡Ä°CÄ°: Authenticated kullanÄ±cÄ±lar manuel ÅŸofÃ¶rleri okuyabilir
      allow read: if request.auth != null;
    }
    
    // Settings collection - sistem ayarlarÄ±
    match /settings/{settingId} {
      // Ã–deme yÃ¶ntemleri ve banka bilgileri herkese aÃ§Ä±k
      allow read: if true; 
      // Sadece admin yazabilir
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Financial Transactions collection - finansal iÅŸlemler
    match /financial_transactions/{transactionId} {
      // Sadece admin tÃ¼m finansal iÅŸlemleri gÃ¶rebilir
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // ÅofÃ¶r kendi finansal iÅŸlemlerini gÃ¶rebilir
      allow read: if request.auth != null && 
        resource.data.driverId == request.auth.uid;
      
      // GEÃ‡Ä°CÄ°: Authenticated kullanÄ±cÄ±lar finansal iÅŸlemleri okuyabilir (Dashboard iÃ§in)
      allow read: if request.auth != null;
      
      // Sadece admin finansal iÅŸlem oluÅŸturabilir/gÃ¼ncelleyebilir
      allow create, update: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Sadece admin silebilir
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Payment Reminders collection - Ã¶deme hatÄ±rlatÄ±cÄ±larÄ±
    match /paymentReminders/{reminderId} {
      // Sadece admin gÃ¶rebilir ve yÃ¶netebilir
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // ÅofÃ¶r kendi hatÄ±rlatÄ±cÄ±larÄ±nÄ± gÃ¶rebilir
      allow read: if request.auth != null && 
        resource.data.driverId == request.auth.uid;
    }
    
    // Counters collection - rezervasyon numarasÄ± sayaÃ§larÄ±
    match /counters/{counterId} {
      // Counter iÅŸlemleri iÃ§in gerekli (rezervasyon numarasÄ±)
      allow read, write: if true;
    }
    
    // Extra Services collection - ek hizmetler
    match /extraServices/{serviceId} {
      allow read: if true; // Public extra services
      
      // Admin yazabilir
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // GEÃ‡Ä°CÄ°: Authenticated kullanÄ±cÄ±lar okuyabilir (AdminLayout iÃ§in)
      allow read: if request.auth != null;
    }
    
    // Company Financials collection - ÅŸirket finansallarÄ±
    match /company_financials/{financialId} {
      // Sadece admin ÅŸirket finansallarÄ±nÄ± gÃ¶rebilir ve yÃ¶netebilir
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Company Accounts collection - ÅŸirket hesaplarÄ±
    match /company_accounts/{accountId} {
      // Sadece admin ÅŸirket hesaplarÄ±nÄ± gÃ¶rebilir ve yÃ¶netebilir
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // FCM Tokens collection - push notification tokenlarÄ±
    match /fcmTokens/{userId} {
      // KullanÄ±cÄ± kendi FCM token'Ä±nÄ± yÃ¶netebilir
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admin tÃ¼m token'larÄ± gÃ¶rebilir
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Customers collection - mÃ¼ÅŸteriler
    match /customers/{customerId} {
      // Admin tÃ¼m mÃ¼ÅŸterileri gÃ¶rebilir ve yÃ¶netebilir
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // MÃ¼ÅŸteri kendi profilini gÃ¶rebilir
      allow read: if request.auth != null && request.auth.uid == customerId;
      
      // GEÃ‡Ä°CÄ°: Authenticated kullanÄ±cÄ±lar mÃ¼ÅŸterileri okuyabilir (Dashboard iÃ§in)
      allow read: if request.auth != null;
    }
    
    // =================== EK YARDIMCI KOLEKSÄ°YONLAR ===================
    
    // Notifications collection - bildirimler (eÄŸer gelecekte eklenirse)
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      
      // Admin tÃ¼m bildirimleri gÃ¶rebilir
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Analytics ve logs - sadece admin
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /logs/{logId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Error logs - sistem hatalarÄ±
    match /errorLogs/{errorId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // =================== GÃœVENLÄ°K & SEO ===================
    
    // ğŸ” SEO Ã‡Ã–ZÃœMÃœ: Google Search Console bot'larÄ± iÃ§in
    // Public koleksiyonlara tam okuma eriÅŸimi
    match /{collection}/{document} {
      // Halka aÃ§Ä±k koleksiyonlar - Googlebot okuyabilir
      allow read: if collection in [
        'vehicles',           // AraÃ§ bilgileri
        'settings',          // Ã–deme yÃ¶ntemleri, genel ayarlar  
        'extraServices',     // Ek hizmetler
        'counters'           // Genel sayaÃ§lar
      ];
    }
    
    // Public SEO data koleksiyonu (eÄŸer gelecekte eklenirse)
    match /public_seo/{document} {
      allow read: if true; // SEO verileri herkesin okumasÄ± iÃ§in
    }
    
    // Default deny - GÃœVENLÄ°K Ä°Ã‡Ä°N Ã‡OK Ã–NEMLÄ°!
    // YukarÄ±da tanÄ±mlanmayan koleksiyonlara yazma kesinlikle yasak
    match /{document=**} {
      allow write: if false; // Yazma kesinlikle yasak
    }
  }
}
